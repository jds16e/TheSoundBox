<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/airplane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="100dp"
        android:text="Airplane"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/firetruck"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="100dp"
        android:text="Bell"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/gong"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/firetruck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="100dp"
        android:text="Fire Truck"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/sos"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/gong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="100dp"
        android:text="Gong"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/train"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/sos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="240dp"
        android:text="S.O.S."
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/train"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="240dp"
        android:text="Train"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:text="Play Custom Audio"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/stop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/stop"
        android:layout_width="95dp"
        android:layout_height="37dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="68dp"
        android:text="Stop Recording"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/record"
        android:layout_width="95dp"
        android:layout_height="37dp"
        android:layout_marginStart="68dp"
        android:layout_marginBottom="68dp"
        android:text="Start Recording"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>